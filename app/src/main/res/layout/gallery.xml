<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textSize="35dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2">

        </TextView>

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            />

        <ImageView
            android:id="@+id/camera_gallery"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="20dp" />


        <ImageView
            android:id="@+id/effects_gallery"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignTop="@+id/camera_gallery"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/menu_gallery"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/effects_gallery"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/menu_gallery"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/menu_gallery"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:text="Menu"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Effects"
            android:textSize="15dp"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/camera_gallery"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/camera_gallery"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:text="Camera"
            android:textSize="15dp" />



    </RelativeLayout>



</android.support.constraint.ConstraintLayout>